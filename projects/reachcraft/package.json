{
  "name": "reachcraft",
  "version": "1.0.0",
  "description": "Multi-vertical contact management SaaS platform - The Salesforce for the AI era",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:extension\"",
    "dev:frontend": "next dev -p 3000",
    "dev:backend": "nodemon --exec ts-node src/backend/server.ts",
    "dev:extension": "webpack --watch --config webpack.extension.config.js",
    "build": "npm run build:frontend && npm run build:backend && npm run build:extension",
    "build:frontend": "next build",
    "build:backend": "tsc -p tsconfig.backend.json",
    "build:extension": "webpack --config webpack.extension.config.js",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "next start -p 3000",
    "start:backend": "node dist/backend/server.js",
    "codegen": "graphql-codegen --config codegen.yml",
    "test": "jest",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "db:migrate": "supabase migration up",
    "db:reset": "supabase db reset",
    "db:seed": "ts-node src/backend/seed.ts"
  },
  "dependencies": {
    "TEAM_1_INFRASTRUCTURE": "=== Database, Auth, Multi-tenancy ===",
