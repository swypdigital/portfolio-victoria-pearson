# GenCraft API Server Configuration

# Server
PORT=3001
NODE_ENV=development

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_KEY_SALT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_BASIC=100
RATE_LIMIT_MAX_PRO=1000

# Cost Controls
MAX_DAILY_COST_BASIC=10.00
MAX_DAILY_COST_PRO=100.00
CIRCUIT_BREAKER_THRESHOLD=500.00

# Engine Configuration
VIBESDK_ENABLED=true
SINDY_RL_ENABLED=true
DOCUMENT07_ENABLED=false

# Engine Limits (per day)
VIBESDK_DAILY_LIMIT=unlimited
SINDY_RL_DAILY_LIMIT=500
DOCUMENT07_DAILY_LIMIT=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/gencraft-api.log

# CORS
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Health Check
HEALTH_CHECK_INTERVAL_MS=60000

# Database (for API keys - using SQLite for now)
DB_PATH=./data/gencraft-api.db
