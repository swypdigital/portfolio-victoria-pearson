# ============================================================================
# GenCraft v3.0 Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control
# ============================================================================

# ----------------------------------------------------------------------------
# Database (Supabase)
# ----------------------------------------------------------------------------
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api

# Supabase project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous/public key (safe for client-side)
SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (NEVER expose to client - server-only)
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Database connection string (optional - for direct connections)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project.supabase.co:5432/postgres

# ----------------------------------------------------------------------------
# Server Configuration
# ----------------------------------------------------------------------------

# API server port
PORT=3000

# Node environment
NODE_ENV=development

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# ----------------------------------------------------------------------------
# LLM Provider APIs
# ----------------------------------------------------------------------------

# OpenAI API key
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic API key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Default model for generation
DEFAULT_MODEL=gpt-4-turbo-preview

# ----------------------------------------------------------------------------
# Redis (Optional - for production caching/rate limiting)
# ----------------------------------------------------------------------------

# Redis connection URL
REDIS_URL=redis://localhost:6379

# Redis password (if required)
REDIS_PASSWORD=

# ----------------------------------------------------------------------------
# Security
# ----------------------------------------------------------------------------

# JWT secret for custom tokens (if not using Supabase Auth)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars

# Encryption key for sensitive data
ENCRYPTION_KEY=your-encryption-key-here

# ----------------------------------------------------------------------------
# Monitoring & Logging
# ----------------------------------------------------------------------------

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Sentry DSN (optional - for error tracking)
SENTRY_DSN=

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------

# Enable AIEN enforcement (true/false)
ENABLE_AIEN=true

# Enable rate limiting (true/false)
ENABLE_RATE_LIMITING=true

# Enable request logging (true/false)
ENABLE_REQUEST_LOGGING=true

# ----------------------------------------------------------------------------
# Development
# ----------------------------------------------------------------------------

# Enable debug mode
DEBUG=false

# Mock LLM responses (for testing without API costs)
MOCK_LLM_RESPONSES=false
